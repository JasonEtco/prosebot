{
  "name": "prosebot",
  "version": "1.0.0",
  "description": "A Probot App that tells you how to write good",
  "author": "Jason Etcovitch &lt;jasonetco@github.com&gt; (https://github.com/JasonEtco/prosebot)",
  "license": "ISC",
  "repository": "https://github.com/JasonEtco/prosebot.git",
  "homepage": "https://github.com/JasonEtco/prosebot",
  "bugs": "https://github.com/JasonEtco/prosebot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "alex": "^9.1.0",
    "@prosebot/markdown-spellcheck": "^1.3.1",
    "probot": "^11.0.1",
    "remove-markdown": "^0.3.0",
    "write-good": "^1.0.4"
  },
  "devDependencies": {
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "nock": "^13.0.5",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "smee-client": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
